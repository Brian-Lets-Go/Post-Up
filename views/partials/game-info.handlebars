<article class="post">
    <div class="title">
        <a href="{{game_url}}" target="_blank">{{title}}</a>
    </div>
    <div class="meta">
        {{game_title}}
        <br>
        Game Type: {{game_type}}
        <br>
        Game Date: {{game_date}}
        <br>
        Game Time: {{game_time}}
        <br>
        Location: {{game_venue}}
        <br>

        {{attend_count}} people voted attend on this game
        |
        <button type="button" class="attend-btn">Attend</button>
        {{!-- <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a> --}}
    </div>
</article>